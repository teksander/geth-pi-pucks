#!/bin/bash
#  Initalize GETH on either the computer or the pi-pucks

# Header
cd $(dirname $0)
source globalconfig

# If the GETH process has not been initialized in the blockchain directory
if [ ! -d "$MAIN_DIR_ROBOTS/$BLOCKCHAIN_FOLDER/geth" ] 
then
    geth init  "$MAIN_DIR_ROBOTS/$BLOCKCHAIN_FOLDER/genesis/$GENESIS_NAME.json" \
    --datadir  "$MAIN_DIR_ROBOTS/$BLOCKCHAIN_FOLDER" \
    --keystore "$MAIN_DIR_ROBOTS/$BLOCKCHAIN_FOLDER/keystore/${ID}"
    echo "Initialized GETH"
    echo "Genesis: $MAIN_DIR_ROBOTS/$BLOCKCHAIN_FOLDER/genesis/$GENESIS_NAME.json"
    echo "Keystore: $MAIN_DIR_ROBOTS/$BLOCKCHAIN_FOLDER/keystore/${ID}"
fi

# If is a Pi-Puck
if [[ $LOGNAME == $ROBOTS_NAME ]]
then
	FILE="/boot/pi-puck_id"
	ID=$(cat "$FILE")
else
	ID="100"
fi

geth --datadir "$MAIN_DIR_ROBOTS/$BLOCKCHAIN_FOLDER" \
--syncmode "full" \
--port 30311 \
--ws \
--ws.addr "0.0.0.0" \
--ws.port 3335 \
--ws.origins 172.17.0.0 \
--ws.api "personal,eth,net,web3,txpool,miner,admin" \
--networkid 1515 \
--allow-insecure-unlock \
--lightkdf \
--verbosity 5 \
--vmdebug \
--nodiscover \
--miner.gasprice "0x1" \
--miner.gastarget "0x1" \
--miner.gaslimit "0x9000000000" \
--nat=extip:"${SUBNET}.${ID}" 

# Flags to maybe fix the peering delay issue
# --maxpendpeers 5 \
# --config ${MAIN_DIR}/geth/geth-config.toml

echo ${ID}
# --miner.gaslimit "0x9000000000000" \